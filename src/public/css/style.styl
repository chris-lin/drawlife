@import 'nib'

// Some settings
$font-size = 14px
$line-height = 1.5

// Some sugar functions
gap(multiplier)
  return $font-size * $line-height * multiplier

// Width
w(val)
  width val

// Height
h(val)
  height val

// Padding
p()
  padding arguments

// Margin
m()
  margin arguments

c()
  color arguments

b()
  border 1px solid arguments

// Colors
$time = #aaa
$user-name = #195073
$system-msg = #7F8C1F
$chat-input-border = #eee
$button-color = #195073
$white = #fff


// Actual code
body
  padding 50px
  font-size 16px
  background #3A3E4E

a
  c #195073

h1
  text-align center
  font-size 2em

// Header stuff, just sugar, not important
.hd
  width 95%
  margin 0 auto

  .l, .r
    display inline-block
    width 50%

  .l
    text-align left

  .c
    text-align center

  .r
    text-align right

.chatroomName
  p gap(0.5)
  c #fff

.chat-users
  h(400px)
  overflow-y auto
  border 2px solid #FDC255
  border-radius 6px 6px 6px 6px

.chat-usersList
  font-size 18px
  list-style:disc;

.chat-usersList li
  line-height 26px

.chat
  width 95%
  margin 0 auto

.chat-bd
  h(400px)
  overflow-y auto
  background #eeeeee
  border 2px solid #FDC255
  border-radius 6px 6px 6px 6px

.chat-msgs
  p gap(1)

.chat-msg-time
  c $time
  margin-right gap(0.4)

.chat-msg-user
  font-weight bold
  margin-right gap(0.4)
  c $user-name

.chat-system-msg
  c $system-msg

.chat-ft
  padding gap(0.5)

.chat-form
  overflow hidden

.chat-input-wrapper
  overflow hidden
  p gap(0.2)

.chat-input
  font-size 20px
  width 100%
  margin 0
  border 2px solid #3A93E9

  &:focus
    outline none
    box-shadow 0

.chat-submit
  font-size 20px
  float right
  margin-left gap(0.5)
  p gap(0.5) gap(1)
  border none
  c $white

// -------------  login css style -------------

#list
  w(283px)
  margin 0 auto
  p 20px 0 15px
  position relative


/* line 38, ../sass/screen.sass */
.item, .item-new
  w 250px
  overflow hidden
  *zoom: 1
  background-color #f9f9f9
  b #eee
  border-radius 6px 6px 6px 6px
  list-style none outside none
  margin 6px 0 0
  p 8px 9px 9px
  position relative
  text-shadow 1px 1px 0 white

